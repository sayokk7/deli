        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="@color/anchovy_20" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="@color/anchovy_20" />
        </shape>
    </item>
    <item>
