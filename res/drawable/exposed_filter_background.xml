<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <ripple android:color="?colorPrimaryDark">
            <item>
                <shape>
                    <corners android:radius="4.0dip" />
                    <solid android:color="?colorPrimary" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="?backgroundButtonPrimary">
            <item>
                <shape>
                    <corners android:radius="4.0dip" />
                    <solid android:color="@color/white" />
                    <stroke android:width="2.0dip" android:color="@color/black_alpha_8" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>