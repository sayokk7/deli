<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingTop="@dimen/pre_chat_form_container_padding" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/pre_chat_form_padding" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <com.google.android.material.textfield.TextInputLayout android:id="@id/name" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:id="@id/nameText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/pre_chat_form_item_margin" android:hint="@string/pre_chat_name_hint" android:inputType="textFilter" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@id/email" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:id="@id/emailText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/pre_chat_form_item_margin" android:hint="@string/pre_chat_email_hint" android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@id/phone" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:id="@id/phoneText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/pre_chat_form_item_margin" android:hint="@string/pre_chat_phone_hint" android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner android:id="@id/departments" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/pre_chat_form_item_margin" android:hint="@string/pre_chat_departments_hint" />
            <com.google.android.material.textfield.TextInputLayout android:id="@id/message" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:gravity="start|center|top" android:id="@id/messageText" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/pre_chat_form_item_margin" android:hint="@string/pre_chat_message_hint" android:maxLines="8" android:lines="4" android:inputType="textFilter|textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>