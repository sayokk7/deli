<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/attachment_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_chat_attachment_pdf" />
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="fill_parent">
        <TextView android:id="@id/attachment_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.5" style="@style/attachment_document_title" />
        <TextView android:id="@id/attachment_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.5" style="@style/attachment_document_subtitle" />
    </LinearLayout>
</LinearLayout>